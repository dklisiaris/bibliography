
<div id="login-container">
  <h1 class="h2 text-center push-top-bottom animation-slideDown">
    <i class="fa fa-plus"></i> <strong><%= t('create_account') %></strong>
  </h1>
  <div class="block animation-fadeInQuickInv">
    <div class="block-title">
      <div class="block-options pull-right">
        <% opts = {class: "btn btn-effect-ripple btn-primary", 'data-toggle' => "tooltip", "data-placement" => "left", title: t('back_to_login')} %>
        <%= link_to new_user_session_path, opts do %>
          <i class="fa fa-user"></i>
        <% end %>
      </div>
      <h2><%= detone t('register') %></h2>
    </div>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form', class: "form-horizontal"}) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <div class="col-xs-12">
          <%= f.label :email %>
          <%= f.email_field :email, :autofocus => true, class: 'form-control', placeholder: t('enter_email') %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-12">
          <%= f.label t('password') %>
          <%= f.password_field :password, class: 'form-control', placeholder: t('enter_password') %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-12">
          <%= f.label t('password_confirmation') %>
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: t('confirm_password') %>
        </div>
      </div>
      <div class="form-group form-actions">
        <div class="col-xs-8">
          <%= button_tag(type: "submit", class: "btn btn-effect-ripple btn-success", id: "submit-btn") do %>
              <i class="fa fa-plus"></i> <%= t('create_account') %>
          <% end %>
        </div>
      </div>
    <% end %>

    <hr/>

    <div class="form-group row">
      <div class="col-md-6">
        <%= link_to "#{fa('facebook')} Login with Facebook".html_safe, user_facebook_omniauth_authorize_path, class: 'btn btn-block btn-fb' %>
      </div>
      <div class="col-md-6">
        <%= link_to "#{fa('google')} Login with Google".html_safe, user_google_oauth2_omniauth_authorize_path, class: 'btn btn-block btn-gl' %>
      </div>
    </div>

  </div>
  <footer class="text-muted text-center animation-pullUp">
    <small><span id="year-copy"></span> &copy; <%= link_to "Bibliography GR", root_path %></small>
  </footer>
</div>

