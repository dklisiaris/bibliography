<% pages = {fa('home') => root_url, t('authors.label') => nil} %>

<%= cell(:navigation).call(:content_header, title: t('authors.listing'), breadcrumbs: pages) %>

<div class="row">
   <div class="col-sm-12">
      <div class="block">
        <div class="block-title">
          <div class="block-options pull-right">
            <%= cell(:navigation).call(:btn_link_to, name: fa('plus'), url: new_author_path, tooltip: t('authors.new')) if policy(Author).new? %>
          </div>
          <h2><%= t('authors.all') %></h2>
        </div>  
        <%= render 'authors/authors' %>             
      </div>
  </div>
</div>
