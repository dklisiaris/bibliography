- if user_signed_in? && @people_to_follow.any?
  .widget
    .widget-content.widget-content-mini.border-bottom
      %strong= t('similar_users')
    .widget-content.widget-content-full-top-bottom
      .row
        - @people_to_follow.each do |u|
          .col-xs-3
            .widget-content
              = link_to image_tag(u.avatar), public_profile_path(u.profile), title: u.screen_name
