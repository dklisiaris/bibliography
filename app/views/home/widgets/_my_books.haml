.widget
  .widget-content.widget-content-mini
    %i.fa.fa-fw.fa-book
    %strong= t('my_books')
  .widget-content
    .row
      - if user_signed_in?
        .col-xs-12
          = "#{current_user.books.distinct.count} #{t('books.label')} | #{@shelves.count} #{t('collections')} | #{current_user.writer_ids.uniq.count} #{t('authors.label')}"
        .col-xs-12
          = cell(:search).call(:search_form, url: '#', placeholder: t('search_my_books'))
      - else
        .text-center
          %span.text-muted
            %small= link_to t('books.sign_in_to_store_books'), new_user_session_path

