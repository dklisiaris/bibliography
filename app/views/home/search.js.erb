if("<%= params['search_only'] %>" === "books"){
  $('#load-more-books a').button('loading');
  $('#load-more-books-btn-container').prepend("<%= j render :partial => 'books/book', :collection => @books, :as => :book if @books.present? %>");

  $('#load-more-books a').button('reset');
  $('#load-more-books').html("<%= j link_to_next_page @books, t('load_more'), params: params, remote: true, class: 'btn btn-block btn-primary'  if @books.present? %>");
}
