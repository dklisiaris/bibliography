<p id="notice"><%= notice %></p>

<h1>Listing Prizes</h1>

<%= paginate @prizes %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prizes.each do |prize| %>
      <tr>
        <td><%= prize.name %></td>
        <td><%= link_to t('show'), prize %></td>        
        <td><%= link_to t('edit'), edit_prize_path(prize) if policy(prize).update? %></td>                
        <td><%= link_to t('destroy'), prize, method: :delete, data: { confirm: 'Are you sure?' } if policy(prize).destroy? %></td>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Prize', new_prize_path if policy(Prize).new? %>
