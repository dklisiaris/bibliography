<%= render 'form' %>

<div class="row">
  <div class="col-md-12">
    <div class="block">
      <div class="block-title">
        <h2>
          <%= UnicodeUtils.upcase(t('import.danger_zone')) %>
        </h2>
      </div>
      <div class="block-section">
        <h4 class="sub-header">
          <%= t('import.import_from_storage') %>
        </h4>
        <span class="help-block">
          <%= t('import.storage_import_description') %>
        </span>
        <%= link_to(t('import.import_label'), storage_import_path, class: 'btn btn-effect-ripple btn-danger') %>
      </div>      
    </div>
  </div>

</div>
