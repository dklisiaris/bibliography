<%= form_tag(search_publishers_path, method: 'get') do %>
  <div class="input-group">
  	<% if params[:query].present? %>
    <span class="input-group-btn">
    	<%= link_to "clear", publishers_path, class: "btn btn-default" %>
    </span>  
    <% end %>

    <span id="remote">      
      <%= text_field_tag :query, params[:query], class: 'typeahead form-control input-md', :placeholder => t('publishers.search') %> 
    </span>     	

    <span class="input-group-btn">      
      <%= button_tag(type: "submit", name: nil, class: "btn btn-md btn-effect-ripple btn-primary") do %>
          <%= fa('search') %>
      <% end %>      
    </span>
  </div>
<% end %>