   <div class="content-header content-header-media">
      <div class="header-section">
         <div class="row">
            <div class="col-sm-7 col-md-8 col-lg-9 content-float-hor push-bit-top-bottom clearfix">               
               <%= image_tag(@profile.gravatar, alt: "avatar", class: "img-circle img-thumbnail img-thumbnail-avatar pull-left")  %>
               <h1><%= @profile.name %> (<%= @profile.username %>)</h1>
               <h2 class="text-light-op"> Total Books in library: <%= @profile.user.books.distinct.count %></h2>
            </div>
            <% if @profile.user != current_user %>
              <div class="col-sm-5 col-md-4 col-lg-3 text-right content-float-hor push-bit-top-bottom">
                 <div class="row">                  
                    <div class="col-xs-6 col-sm-12">
                      <%= button_tag :onclick => "javascript:follow(#{@profile.id})",
                        type: "button",    
                        class: "btn btn-xs btn-follow btn-follow-#{@profile.id} btn-effect-ripple #{current_user.following?(@profile.user) ? 'btn-success' : 'btn-default'}" do %>
                          <% if current_user.following?(@profile.user) %>
                          <i class="fa fa-users"></i>
                          <strong><span><%= " #{t 'users.following'}" %></span></strong>
                          <% else %>
                          <i class="fa fa-user-plus"></i>
                          <strong><span><%= " #{t 'users.follow'}" %></span></strong>
                          <% end %>
                          
                      <% end %>
                    </div>                  
                 </div>
              </div>
            <% end %>
         </div>
      </div>      
      <%= image_tag(@profile.cover_safe, alt: "cover")  %>
   </div>
<% end %>


