<%= form_for(@category, class: 'form-bordered') do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% @category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label t('name') %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :ddc %><br>
    <%= f.text_field :ddc, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :slug %><br>
    <%= f.text_field :slug, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :biblionet_id %><br>
    <%= f.number_field :biblionet_id, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :featured, class: 'control-label' %><br>
    <div>
      <%= label_tag(nil, class: 'csscheckbox csscheckbox-primary') do %>
        <%= f.check_box :featured %>
        <span></span>
      <% end %>      
    </div>
  </div>    

  <%= f.hidden_field :parent_id, value: @category.parent_id %><br>

  <div class="form-group form-actions">
    <%= f.submit t('save'), class: 'btn btn-effect-ripple btn-primary' %>
  </div>
<% end %>


