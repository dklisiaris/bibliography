<div class="widget">  
  <div class="widget-content widget-content-mini themed-background-dark-flat text-light-op border-bottom">    
    <i class=<%= "\"fa #{icon}\"".html_safe %>></i><strong><%= title %></strong>
  </div>      
  <div class="widget-content">
    <div class="book-container">
      <% books.each do |book| %>
        <div class="book-cover">
          <%= link_to image_tag(book.cover, height: '114', width: '114', alt: "book_cover", class: "img-thumbnail center-block", 'data-toggle' => "tooltip", "data-placement" => "top", title: book.title), book %>      
        </div>          
      <% end %>     
    </div>
  </div>
</div>