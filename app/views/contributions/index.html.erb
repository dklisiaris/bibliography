
<h1>Listing Contributions</h1>

<%= paginate @contributions %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Job</th>      
      <th>Author</th>
      <th>Book</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contributions.each do |contribution| %>
      <tr>
        <td><%= contribution.job %></td>
        <td><%= link_to contribution.author.fullname, contribution.author %></td>
        <td><%= link_to contribution.book.title, contribution.book %></td>        
        <td><%= link_to t('show'), contribution %></td>
        <td><%= link_to t('edit'), edit_contribution_path(contribution) if policy(contribution).update? %></td>
        <td><%= link_to t('destroy'), contribution, method: :delete, data: { confirm: 'Are you sure?' } if policy(contribution).destroy? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contribution', new_contribution_path if policy(Contribution).new? %>
